<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GifFresh" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/teal500</item>
        <item name="colorSecondary">@color/teal500</item>
        <item name="colorPrimaryVariant">@color/teal700</item>
        <item name="colorSecondaryVariant">@color/teal700</item>

        <item name="android:colorBackground">@color/light_gray</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/dark_gray</item>
        <item name="colorOnSurface">@color/dark_gray</item>
        <item name="colorOnError">@color/white</item>


        <item name="android:windowLightStatusBar" tools:ignore="NewAPi">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewAPi">true</item>
        <item name="android:statusBarColor" tools:ignore="NewAPi">?colorSurface</item>
        <item name="android:navigationBarColor" tools:ignore="NewAPi">
            ?android:attr/colorBackground
        </item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewAPi">
            ?colorControlHighlight
        </item>
    </style>
</resources>